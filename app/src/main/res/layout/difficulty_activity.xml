<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/level_select"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/home_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="560dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/level_home" />

    <android.widget.Button
        android:id="@+id/low_btn"
        android:layout_width="295dp"
        android:layout_height="245dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="250dp"
        android:background="@drawable/rounded_btn_blue_ripple"
        android:fontFamily="@font/yeongdeoksnowcrab"
        android:text="초급"
        android:textColor="#FFFFFF"
        android:textSize="96sp" />

    <android.widget.Button
        android:id="@+id/medium_btn"
        android:layout_width="295dp"
        android:layout_height="245dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="250dp"
        android:background="@drawable/rounded_btn_brown_ripple"
        android:fontFamily="@font/yeongdeoksnowcrab"
        android:text="중급"
        android:textColor="#FFFFFF"
        android:textSize="96sp" />

    <android.widget.Button
        android:id="@+id/high_btn"
        android:layout_width="295dp"
        android:layout_height="245dp"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="250dp"
        android:background="@drawable/rounded_btn_red_ripple"
        android:fontFamily="@font/yeongdeoksnowcrab"
        android:text="고급"
        android:textColor="#FFFFFF"
        android:textSize="96sp" />
</LinearLayout>